---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
import Navigation from "./navigation.astro"
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content= "le site de l'atelier de la Bonne Fabrique" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <title>{ title }</title>
    <style is:global>
      @import '../styles/LBF/links.css';
      @import '../styles/LBF/general.css';
      @import '../styles/LBF/galerie.css';
    </style>
  </head>
  <body class="relative container bg-fondLBF sm:w-full">
  	<div class="flex flex-row sm:flex-col ">
          <div class="sm:flex sm:flex-row flex-col">    
            <Navigation />
            <div class="sm:flex-1 w-screen mt-14 md:mt-1 " id="bobby">
                <slot />
            </div>
        </div>
  	</div>
    <script src="/js/fslightbox.js" defer></script>
    <script src="/js/selectionTag.js" defer></script>
  </body>
</html>